root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[*.html]
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.py]
max_line_length = 88

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
